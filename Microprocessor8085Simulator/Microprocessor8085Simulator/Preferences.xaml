<Window x:Class="Microprocessor8085Simulator.Preferences"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preferences" Height="400" Width="450">
    <Grid Background="{StaticResource GPB}">
        <Button Content="OK" Height="23" HorizontalAlignment="Left" IsDefault="True" Margin="99,290,0,0" Name="bPrefOk" VerticalAlignment="Top" Width="75" Click="bPrefOk_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" IsCancel="True" Margin="250,290,0,0" Name="bPrefCancel" VerticalAlignment="Top" Width="75"/>
        <CheckBox Content="Show Value In ToolTip" Height="16" HorizontalAlignment="Left" Margin="39,33,0,0" Name="cbShowBinaryValueToolTip" VerticalAlignment="Top" Checked="cbShowBinaryValueToolTip_Checked" Unchecked="cbShowBinaryValueToolTip_Unchecked" />
        <ComboBox Height="23" SelectedIndex="0" HorizontalAlignment="Left" Margin="285,28,0,0" Name="cbFormat" VerticalAlignment="Top" Width="120" >
            <ComboBoxItem>Binary</ComboBoxItem>
            <ComboBoxItem>Decimal</ComboBoxItem>
            <ComboBoxItem>Octal</ComboBoxItem>
        </ComboBox>
        <Label Content="Format" Height="28" HorizontalAlignment="Left" Margin="229,27,0,0" Name="label1" VerticalAlignment="Top" />
    </Grid>
</Window>
